// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Destino {
  id           String   @id // ya no tiene @default(autoincrement())
  slug         String   @unique
  nombre       String
  ubicacion    String
  tipo         String
  precio       Float
  duracion     String
  presupuesto  String
  imagen       String
  descripcion  String
  gastos       Json
  tours        Json
  creadoEn     DateTime @default(now())
  actualizadoEn DateTime @updatedAt
}

model users {
  id            String   @id @default(uuid())
  email         String   @unique
  username      String?
  password_hash String?  // Puede ser opcional si usan Google Auth
  is_verified   Boolean  @default(false)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  // Relaciones con los datos de la app
  planes    Plan[]
  reviews   Review[]
  chats     ChatSession[]
}

model Profile {
  id       String  @id @default(uuid())
  name     String?
  surname  String?
  city     String?
  phone    String?
}

model Preferences {
  id        String  @id @default(uuid())
  budget    Int?
  travType  String?
  allergies String?
  foodRest  String?
}
