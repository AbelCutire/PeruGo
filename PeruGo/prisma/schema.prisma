// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Destino {
  id          Int      @id @default(autoincrement())
  slug        String   @unique // ejemplo: "cusco", "paracas"
  nombre      String
  ubicacion   String
  tipo        String
  precio      Float
  duracion    String
  presupuesto String
  imagen      String
  descripcion String

  gastos      Json     // alojamiento, transporte, etc.
  tours       Json     // lista de tours con detalles

  creadoEn    DateTime @default(now())
  actualizadoEn DateTime @updatedAt
}
